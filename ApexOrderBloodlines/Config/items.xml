    <!-- CLASS INJECTORS (crafted from injector, then USED) -->
    <item name="BL_InjectorVanguard" extends="medicalFirstAidBandage">
  <property name="CustomIcon" value="vanguard_injector"/>
  <property name="CustomIconTint" value="ffffff"/>
  <property name="ItemTypeIcon" value="star"/>
  <property name="Meshfile" value="@:Other/Items/Misc/sackPrefab.prefab"/>
	<property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab"/>
  <property name="Material" value="Mmetal"/>
  <property name="Stacknumber" value="1"/>
  <property name="Weight" value="0"/>
  <property name="SellableToTrader" value="false"/>
  <property name="Group" value="Special Items"/>

  <!-- optional: makes sure it doesn’t “behave like a bandage” in stats text -->
  <property name="DisplayName" value="blVanguardInjectorName"/>
  <property name="DescriptionKey" value="blVanguardInjectorDesc"/>

  <effect_group tiered="false">
    <!-- only allow once -->
    <triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffBloodlineVanguard">
      <requirement name="NotHasBuff" buff="buffBloodlineChosen"/>
    </triggered_effect>

    <triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffBloodlineChosen">
      <requirement name="NotHasBuff" buff="buffBloodlineChosen"/>
    </triggered_effect>
  </effect_group>
